<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/aop
    http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

    <aop:aspectj-autoproxy proxy-target-class="true"/>

    <bean id="helloWorld" class="li.jesse.hello.HelloWorld">
        <property name="message" value="Hello World!"/>
    </bean>

    <!-- Definition for textEditor bean -->
    <bean id="textEditor" class="li.jesse.ioc.texteditor.TextEditor">
        <constructor-arg ref="spellChecker"/>
    </bean>

    <!-- Definition for spellChecker bean -->
    <bean id="spellChecker" class="li.jesse.ioc.texteditor.SpellChecker">
    </bean>


    <bean id="naiveWaiter" class="li.jesse.aop.waiter.NaiveWaiter"/>
    <bean id="naughtyWaiter" class="li.jesse.aop.waiter.NaughtyWaiter"/>
    <!--<bean id="seller" class="com.yyq.aspectJAdvanced.SmartSeller"/>-->

</beans>